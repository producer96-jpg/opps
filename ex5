#include <iostream>
using namespace std;
class Number {
private:
int value;
public:
// Constructor
Number(int v = 0) {
value = v;
}
// Member function overloading ++ (prefix)
Number operator++() {
value += 100;
return *this;
}
// Friend function overloading ++ (postfix)
friend Number operator++(Number &n, int);
// Display function
void display() {
cout << "Value: " << value << endl;
}
};
// Friend function: Postfix increment
Number operator++(Number &n, int) {
Number temp = n;
n.value += 100;
return temp;
}
int main() {
Number num1(50), num2(200);
cout << "Original Values:\n";
num1.display();
num2.display();
// Using member function (prefix)
++num1;
cout << "\nAfter prefix increment (++num1):\n";
num1.display();
// Using friend function (postfix)
num2++;
cout << "\nAfter postfix increment (num2++):\n";
num2.display();
return 0;
}
